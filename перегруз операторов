#include <iostream>

using namespace std;
class Drob
{
    int num1;
    int num2;
public:
    Drob(int nNum1, int nNum2) : 
        num1{nNum1}, num2 { nNum2}{}
    Drob(): Drob(12,23){}
    friend Drob operator +(const Drob& lhs, const Drob& rhs);
    friend Drob operator -(const Drob& lhs, const Drob& rhs);
    friend Drob operator *(const Drob& lhs, const Drob& rhs);
    friend Drob operator /(const Drob& lhs, const Drob& rhs);
};
int main()
{
    Drob a(12,36);

    system("pause");
    return 0;
}
